{% extends 'layout.html.twig' %}

{% block content %}

	<div class="card">
		<div class="card-header">
			<h2>Nos derniers articles</h2>
		</div>
		<div "card-body">
			{% for post in posts %}
				<h5 class="card-title pt-3">{{ post.title }}</h5>
				<p class="card-text">{{ post.chapo }}</p>
				<p class="card-text">publi√© le {{ post.getDateUpdated}}</p>
				<p class="card-text">par {{ post.author }}</p>
				{# <a href="{{ path }}" class="btn btn-secondary">Lire la suite</a> #}
				<a href="/posts?action=show&id={{ post.id }}" class="btn btn-secondary">Lire la suite</a>
			{% endfor %}
		</div>
	</div>

{% endblock %}
